<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="AppFont">
        <item name="android:fontFamily">monospace</item>

    </style>
    
    <style name="AppFontColor" parent="AppFont">
        <item name="android:textColor">#616161</item>
    </style>

    <style name="AppFontColorLight" parent="AppFont">
        <item name="android:textColor">#909090</item>
    </style>
    
    <style name="AppSmallText" parent="AppFontColor">

        <item name="android:textSize">12sp</item>

    </style>

    <style name="AppMediumText" parent="AppFontColor">
        <item name="android:textSize">15sp</item>

    </style>

    <style name="AppLargeText" parent="AppFontColor">
        <item name="android:textSize">18sp</item>

    </style>

    <style name="AppXLText" parent="AppFontColor">
        <item name="android:textSize">22sp</item>

    </style>

    <style name="AppXLightText" parent="AppFontColorLight">
        <item name="android:textSize">22sp</item>


    </style>





</resources>